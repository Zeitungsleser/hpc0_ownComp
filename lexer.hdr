@ "ustr.hdr"

enum TokenKind
{
    BAD_TOKEN,
    EOI,
    DECIMAL_LITERAL,
    PLUS,
    MINUS,
    ASTERISK,
    SLASH,
    IDENTIFIER,
    LPAREN,
    RPAREN,
    SEMICOLON,
    EQUAL,
    AMPERSAND
};

struct Token
{
    kind:   TokenKind;
    pos:    struct Pos {
                row, col: unsigned;
            };
    val:    -> UStr;
};

extern token: Token;
extern fn getToken(): TokenKind;
extern fn tokenKindStr(: TokenKind): -> char;
