@ "string.hdr"

enum TokenKind
{
    BAD_TOKEN,
    EOI,
    DECIMAL_LITERAL,
    PLUS,
    ASTERISK,
    IDENTIFIER,
    LPAREN,
    RPAREN,
};

struct Token
{
    kind:   TokenKind;
    pos:    struct Pos {
                row, col: unsigned;
            };
    val:    string;
};

extern token: Token;
extern fn getToken(): TokenKind;
extern fn tokenKindStr(: TokenKind): -> char;
